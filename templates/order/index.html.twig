{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h3>{{ message }}</h3>
    </div>
{% endfor %}

<br>
<div class="container">
    <h2>Order Edit:</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Code Id</td>
                <td>Order Code</td>
                <td>Order Date</td>
                <td>Costumer Name</td>
                <td>Description</td>
                <td>Total Amount</td>
                <td><a href="{{path('order_line.edit')}}">Order Line</a></td>
